<% errors = objects.map { |object| object.errors.full_messages.map { |msg| msg } } %>
<% if errors.any? %>
  <div id="error_explanation">
    <ul>
      <% errors.each do |messages| %>
        <% messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
<% end %>
